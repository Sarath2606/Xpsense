# Database Configuration
DATABASE_URL="postgresql://postgres:your-password@localhost:5432/Xpense Backend"

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration (for backwards compatibility)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase Configuration (main authentication method)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="your-firebase-private-key"
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=your-firebase-client-x509-cert-url

# Mastercard Open Banking API Configuration (for banking features - not used by Splitwise)
MASTERCARD_PARTNER_ID=your-mastercard-partner-id
MASTERCARD_CLIENT_ID=your-mastercard-client-id
MASTERCARD_CLIENT_SECRET=your-mastercard-client-secret
MASTERCARD_API_BASE_URL=https://api.openbanking.mastercard.com.au
MASTERCARD_AUTH_URL=https://api.openbanking.mastercard.com.au/oauth2/token

# OAuth Redirect URLs
OAUTH_REDIRECT_URI=http://localhost:3001/api/consents/callback

# CORS Configuration
FRONTEND_URL=http://localhost:3002

# Webhook Configuration (for development - use public webhook service)
WEBHOOK_URL=https://httpbin.org/post

# Rate Limiting (generous for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=5000

# Logging
LOG_LEVEL=debug

# Frontend/Tunnel origins allowed for CORS and Socket.IO
ALLOWED_ORIGINS=https://xpsense.vercel.app,https://competent-genome-knit-cognitive.trycloudflare.com,http://localhost:3002,http://localhost:3000

# Email Configuration (for Splitwise invitations)
SMTP_FROM=your-email@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=false

# SendGrid Configuration (recommended - get free API key from sendgrid.com)
# Add your actual SendGrid API key here (never commit this file to git!)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Frontend URL for invitation links
FRONTEND_URL=https://xpsense.vercel.app